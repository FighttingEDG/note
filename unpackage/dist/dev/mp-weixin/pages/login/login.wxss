		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		position: relative;
		overflow: hidden;
}

	/* 顶部装饰 */
.top-decoration.data-v-e4e4508d {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 300rpx;
}
.circle.data-v-e4e4508d {
		position: absolute;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.1);
}
.circle-1.data-v-e4e4508d {
		width: 200rpx;
		height: 200rpx;
		top: -100rpx;
		right: -50rpx;
}
.circle-2.data-v-e4e4508d {
		width: 150rpx;
		height: 150rpx;
		top: 50rpx;
		left: -75rpx;
}
.circle-3.data-v-e4e4508d {
		width: 100rpx;
		height: 100rpx;
		top: 150rpx;
		right: 100rpx;
}

	/* 标题区域 */
.header-section.data-v-e4e4508d {
		text-align: center;
		padding: 120rpx 40rpx 80rpx;
		position: relative;
		z-index: 2;
}
.app-logo.data-v-e4e4508d {
		margin-bottom: 30rpx;
}
.logo-image.data-v-e4e4508d {
		width: 120rpx;
		height: 120rpx;
		border-radius: 50%;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}
.app-title.data-v-e4e4508d {
		display: block;
		font-size: 48rpx;
		font-weight: bold;
		color: white;
		margin-bottom: 20rpx;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}
.app-subtitle.data-v-e4e4508d {
		display: block;
		font-size: 28rpx;
		color: rgba(255, 255, 255, 0.8);
		font-weight: 300;
}

	/* 表单区域 */
.form-section.data-v-e4e4508d {
		padding: 0 40rpx;
		position: relative;
		z-index: 2;
}
.login-card.data-v-e4e4508d {
		background: white;
		border-radius: 24rpx;
		padding: 60rpx 40rpx;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}
.form-title.data-v-e4e4508d {
		text-align: center;
		font-size: 36rpx;
		font-weight: bold;
		color: #333;
		margin-bottom: 60rpx;
}
.input-group.data-v-e4e4508d {
		margin-bottom: 40rpx;
}
.input-label.data-v-e4e4508d {
		display: flex;
		align-items: center;
		margin-bottom: 20rpx;
}
.label-text.data-v-e4e4508d {
		margin-left: 16rpx;
		font-size: 28rpx;
		color: #666;
		font-weight: 500;
}
.custom-input.data-v-e4e4508d {
		background: #f8f9fa;
		border-radius: 16rpx;
		padding: 8rpx;
}

	/* 记住密码 */
.remember-section.data-v-e4e4508d {
		margin-bottom: 50rpx;
}
.remember-checkbox.data-v-e4e4508d {
		justify-content: center;
}

	/* 登录按钮 */
.login-btn.data-v-e4e4508d {
		width: 100%;
		height: 88rpx;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border: none;
		border-radius: 44rpx;
		color: white;
		font-size: 32rpx;
		font-weight: bold;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
		transition: all 0.3s ease;
		margin-bottom: 40rpx;
}
.login-btn.data-v-e4e4508d:active {
		transform: translateY(2rpx);
		box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}
.login-btn.loading.data-v-e4e4508d {
		opacity: 0.8;
}
.btn-text.data-v-e4e4508d {
		margin-left: 16rpx;
}

	/* 其他操作 */
